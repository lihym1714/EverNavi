<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="10dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        android:background="@drawable/cat_drawable1"
        android:paddingVertical="5dp"
        android:layout_marginBottom="5dp">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/catButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/button_drawable2"
                android:text="Loading..."
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="12pt"
                android:textStyle="bold"
                android:typeface="normal"
                tools:ignore="InvalidId" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/deptext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:textSize="8pt"
                    android:text="Loading..."
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="→"
                    />
                <TextView
                    android:id="@+id/arvtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="8pt"
                    android:text="Loading..."
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/catPlus"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@drawable/button_drawable5"
                android:text="추가"
                android:textColor="@color/white"
                android:visibility="visible" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ToggleButton
                android:id="@+id/toggleButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:checked="false"
                android:background="@drawable/triangle_drawable"
                android:textOn=""
                android:textOff=""
                android:layout_marginBottom="0dp"
                android:layout_marginStart="0dp"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/catlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_gravity="center">

    </LinearLayout>

</LinearLayout>