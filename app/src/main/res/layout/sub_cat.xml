<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/button_drawable1"
        android:paddingVertical="5dp"
        android:layout_marginBottom="5dp">

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:checked="false"
            android:layout_gravity="center"
            android:background="@drawable/button_drawable3"
            android:textColor="@color/white"
            android:layout_marginStart="5dp"
            android:textOff=">"
            android:textOn="V" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.widget.Button
                android:id="@+id/catButton"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/button_drawable2"
                android:text="Loading..."
                android:textColor="@color/white"
                tools:ignore="InvalidId" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/deptext"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginStart="10dp"
                    android:text="Loading..."
                    android:gravity="center"
                    android:background="@drawable/text_view_drawable"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="â†’"
                    />
                <TextView
                    android:id="@+id/arvtext"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="Loading..."
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/text_view_drawable"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/catlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_gravity="center">
        <android.widget.Button
            android:background="@drawable/button_drawable3"
            android:id="@+id/catPlus"
            android:text="+"
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </LinearLayout>
</LinearLayout>