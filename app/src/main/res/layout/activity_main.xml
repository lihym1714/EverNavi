<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <!-- 네이버 지도 -->
        <com.naver.maps.map.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/editTextSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_drawable1"
                android:ems="10"
                android:hint="검색"
                android:inputType="text"
                android:padding="15dp"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="parent" />

            <android.widget.Button
                android:id="@+id/btn1"
                android:layout_width="50dp"
                android:textColor="@color/white"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="65dp"
                android:background="@drawable/button_drawable3"
                app:layout_constraintStart_toStartOf="parent"
                android:text="더보기"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_marginTop="720dp"
                android:id="@+id/cardView"
                android:layout_width="412dp"
                android:layout_height="100dp"
                android:background="@drawable/card_view_drawable1"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="invisible">

                <android.widget.Button
                    android:id="@+id/btnmark1"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_drawable3"
                    android:textColor="@color/white"
                    android:text="출발" />

                <android.widget.Button
                    android:id="@+id/btnWay"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_drawable3"
                    android:layout_margin="15dp"
                    android:textColor="@color/white"
                    android:text="경유"
                    app:layout_constraintEnd_toStartOf="@+id/btnmark2" />

                <android.widget.Button
                    android:id="@+id/btnmark2"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_drawable3"
                    android:textColor="@color/white"
                    android:text="도착"
                    app:layout_constraintEnd_toStartOf="@+id/btnmark1" />

                <android.widget.Button
                    android:id="@+id/lootGen"
                    android:textColor="@color/white"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="경로\n생성"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/button_drawable1" />
            </LinearLayout>


        </com.naver.maps.map.MapView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/naviLayout"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:orientation="horizontal"
        android:background="@drawable/card_view_drawable2"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"
        android:elevation="20dp"
        android:outlineAmbientShadowColor="#FFC107"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:id="@+id/view"
                android:layout_width="50dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="70dp"
                android:background="@drawable/drawable_arowpoint"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="298dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="5dp">
            <TextView
                android:paddingVertical="5dp"
                android:textAlignment="center"
                android:id="@+id/departureAddr"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/text_view_drawable_top"
                android:elevation="10dp"
                android:text="현재 위치"
                android:textSize="20dp"
                android:textColor="@color/white"/>
            <TextView
                android:paddingVertical="5dp"
                android:textAlignment="center"
                android:id="@+id/arrivalAddr"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/text_view_drawable_bottom"
                android:textSize="20dp"
                android:elevation="10dp"
                android:textColor="@color/white"/>
            <TextView
                android:paddingVertical="5dp"
                android:textAlignment="center"
                android:id="@+id/runningTime"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:elevation="10dp"
                android:background="@drawable/edittext_drawable2"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnClear"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_drawable2"
                app:icon="@android:drawable/ic_delete" />
            <Button
                android:id="@+id/btnSave"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_marginTop="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_drawable2"
                app:icon="@android:drawable/ic_menu_save" />
        </LinearLayout>
    </LinearLayout>




